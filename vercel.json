{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/snapshots",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/aggregate",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/data-retention",
      "schedule": "0 4 * * *"
    }
  ]
}
